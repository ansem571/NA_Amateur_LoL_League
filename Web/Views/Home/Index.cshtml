    ViewData["Title"] = "Home Page";
}
<br />
<img src="images/casualealtitle.png" alt="" class="center-block"/>
<br />
@if (Model.IsEmailConfirmed)
{
    <p class="center-block" style="width: 50%">
        Now that you have registered, please read our <a href="https://docs.google.com/document/d/1vNQLBbPZJyJdSX7Hl1bR-ciu6NZ-sxxMAkrtbe168wE/edit?usp=sharing">rules</a>
        document. For links to our social media sites and support. Go to the <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> section.
    </p>
    <br />
}
else if (!Model.IsEmailConfirmed && !string.IsNullOrEmpty(Model.Username))
{
    <div>
        <p>
            You are almost done Registering. Please confirm your email and you will be able to Provide your Summoner information in your Profile Page.
            If you have already confirmed your email, then refresh the page.
            Once you have confirmed your Email and Registered your Summoner Information, you will be able to request to play with other players.
            As well as other players will be enabled to request to play with you.
        </p>
    </div>
    <br />
}
