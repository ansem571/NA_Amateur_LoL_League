@using Web.Views.Manage
@model Domain.Views.SummonerRequestView
@{
    ViewData["Title"] = "Request Summoner";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="SummonerName" disabled="disabled">@Model.SummonerName requests</label>
        <form method="post">

            @for (var i = 0; i < Model.RequestedSummoners.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="@Model.RequestedSummoners[i].SummonerName"></label>
                    <select asp-for="@Model.RequestedSummoners[i].SummonerName" asp-items="Model.Names" style="color:black !important"></select>
                    <label asp-for="@Model.RequestedSummoners[i].IsSub"></label>
                    <input type="checkbox" asp-for="@Model.RequestedSummoners[i].IsSub" disabled="disabled" />
                </div>

            }

            <button type="submit" class="btn btn-default">Save requests</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        View players who have been requested by players/teams <a asp-action="TeamCreationViewAsync" asp-controller="Roster">here</a>.
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}