@model Web.Models.Admin.AchievementViewModel

@{
    ViewData["Title"] = "AddNewAchievementAsync";
}

<h2>AddNewAchievementAsync</h2>

<h4>AchievementViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewAchievementAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function showDetailedInfo() {
        //alert("showDetailedInfo called");
        if (arguments.length < 2)
            return;
        var teamName = arguments[0];
        var index = arguments[1];
        //alert("{{'showDetailedInfo'" + teamName + index + "}}");
        var x = document.getElementById("{{'showDetailedInfo'" + teamName + index + "}}");
        var y = document.getElementById("{{'showDetailedInfoButton'" + teamName + index + "}}");
        if (x.style.display === "none") {
            x.style.display = "block";
            y.innerHTML = "-";
        }
        else {
            x.style.display = "none";
            y.innerHTML = "+";
        }
    }
</script>